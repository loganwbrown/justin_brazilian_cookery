<h1>Index Recipe</h1>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cooktime</th>
      <th>Instructions</th>
      <th>Ingredients</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.description %></td>
      <td><%= recipe.cook_time %></td>
      <td><%= recipe.instructions %></td>
      <td><%= recipe.ingredients %></td>
      <td><%= link_to 'Show', recipe %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Delete', recipe_path(recipe.id), method: :delete, confirm: 'Are you sure?' %></td>
    <% end %>
    </tr>


  </tbody>

</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>